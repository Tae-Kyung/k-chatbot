{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "functions": {
    "src/app/api/chat/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/admin/documents/process/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/crawl/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/admin/qa/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/telegram/webhook/[botId]/route.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/widget.js",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/widget/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "ALLOWALL" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors *;" }
      ]
    }
  ]
}
